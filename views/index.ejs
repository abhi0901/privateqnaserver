<!DOCTYPE html>
<html>

<head>
  <title>Magic Questions and Answers</title>
  <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <h1>Magic QnA</h1>
        <hr class="divider">

        <button class="btn btn-primary" id="askQuestion">Ask a Question ?</button>

        <!-- Container for question form -->
        <div class="col-md-12" id="askQuestionFormContainer">

          <form class="form-horizontal" role="form">
            <div class="form-group">
              <label class="control-label col-sm-2" for="question">Question:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="question" placeholder="Enter your question">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="tag">Tags:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="tag" placeholder="Enter tags comma seprated">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-default" id="askQuestionSubmitBtn">Submit Question</button>
              </div>
            </div>
          </form>

        </div>
        <!-- End of Form Container -->

        <!-- Question panel container -->

        <div class="col-md-12" id="question_panel">

          <div class="panel panel-default">
            <div class="panel-heading">Panel heading without title
              <span class="badge" id="totalAns">14</span>
            </div>
            <div class="panel-body">
              Panel content
            </div>
            <div class="panel-footer">Panel footer</div>
          </div>

        </div>
        <!-- End of question panel container -->

      </div>
    </div>
  </div>

  <!-- including scripts -->
  <script src='/javascripts/jquery.min.js'></script>
  <script src='/javascripts/bootstrap.min.js'></script>
  <script src='/javascripts/index.js'></script>

</body>

</html>
